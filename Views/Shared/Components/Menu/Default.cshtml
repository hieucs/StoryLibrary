@{
}

<div class="iq-sidebar">
    <div class="iq-sidebar-logo d-flex justify-content-between">
        <a asp-controller="Home" asp-action="Index" asp-route-id="" class="header-logo">
            <img src="images/logo.png" class="img-fluid rounded-normal" alt="">
            <div class="logo-title">
                <span class="text-primary text-uppercase">Đại Đạo Viện</span>
            </div>
        </a>
        <div class="iq-menu-bt-sidebar">
            <div class="iq-menu-bt align-self-center">
                <div class="wrapper-menu">
                    <div class="main-circle"><i class="las la-bars"></i></div>
                </div>
            </div>
        </div>
    </div>
    <div id="sidebar-scrollbar">
        <nav class="iq-sidebar-menu">
            <ul id="iq-sidebar-toggle" class="iq-menu">
                @foreach (var item in Model.menus)
                {
                    <li>
                        @if (item.IDParent == "0")
                        {
                            if (item.Name == "Trang chủ")
                            {
                                <a asp-controller="Home" asp-action="Index" asp-route-id="" class="iq-waves-effect">
                                    <i class="">@item.Name</i>
                                </a>
                            }
                            else
                            {
                                <a href="#@item.ClassID" class="iq-waves-effect" data-toggle="collapse" aria-expanded="false">
                                    <span class="ripple rippleEffect"></span>
                                    <i class="@item.ClassCSS iq-arrow-left"></i>
                                    <span> @item.Name </span>
                                    @if (item.HasChild)
                                    {
                                        <i class="ri-arrow-right-s-line iq-arrow-right"></i>
                                    }
                                </a>
                            }

                            @if (item.HasChild)
                            {
                                <ul id="@item.ClassID" class="iq-submenu collapse" data-parent="#iq-sidebar-toggle">
                                    @foreach (var itemChild in Model.menus)
                                    {
                                        if (itemChild.IDParent == item.ID)
                                        {
                                            <li>
                                                <a asp-controller="Pages" asp-action="Category" asp-route-id="@itemChild.Alias-1">
                                                    <i class=""></i>@itemChild.Name
                                                </a>

                                            </li>
                                        }
                                    }
                                </ul>
                            }
                        }
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>
<div class="iq-top-navbar">
    <div class="iq-navbar-custom">
        <nav class="navbar navbar-expand-lg navbar-light p-0">
            <div class="iq-menu-bt d-flex align-items-center">
                <div class="wrapper-menu">
                    <div class="main-circle"><i class="las la-bars"></i></div>
                </div>
                <div class="iq-navbar-logo d-flex justify-content-between">
                    <a asp-controller="Home" asp-action="Index" asp-route-id="" class="header-logo">
                        <img src="images/logo.png" class="img-fluid rounded-normal" alt="">
                        <div class="logo-title">
                            <span class="text-primary text-uppercase">Đại Đạo Viện</span>
                        </div>
                    </a>
                </div>
            </div>
            <div class="navbar-breadcrumb">
                <h5 class="mb-0">@Model.PageName</h5>
                <nav aria-label="breadcrumb">
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item">@ViewData["TitlePageBread1"]</li>
                        <li class="breadcrumb-item active" aria-current="page">@ViewData["TitlePageBread2"]</li>
                    </ul>
                </nav>
            </div>
            @* <a asp-controller="Account" asp-action="Login">Login</a>*@
            <div class="iq-search-bar">
                <form action="#" class="searchbox">
                    <input type="text" class="text search-input" onsubmit="" placeholder="Tìm kiếm...">
                    <a class="search-link" ><i class="ri-search-line"></i></a>
                </form>
            </div>

        </nav>
    </div>
</div>
