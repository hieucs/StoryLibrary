</div>
<div class="col-lg-6">
    <div class="iq-card iq-card-block iq-card-height">
        <div class="iq-card-header d-flex justify-content-between mb-0">
            <div class="iq-header-title">
                <h4 class="card-title">Đọc nhiều</h4>
            </div>
        </div>
        <div class="iq-card-body">
            <ul class="list-inline row mb-0 align-items-center">
                @for (int i = 0; i < Model.ListHot.Count; i++)
                {
                    <li class="col-sm-6 d-flex mb-3 align-items-center">
                        <div class="icon iq-icon-box mr-3">
                            <a asp-controller="Pages" asp-action="Story" asp-route-id="@Model.ListHot[i].Alias-@Model.ListHot[i].IDTruyen"><img class="img-fluid avatar-60 rounded-circle" src="@Model.ListHot[i].LinkImage" alt=""></a>
                        </div>
                        <div class="mt-1">
                            <a asp-controller="Pages" asp-action="Story" asp-route-id="@Model.ListHot[i].Alias-@Model.ListHot[i].IDTruyen"><h6>@Model.ListHot[i].TitleTruyen</h6></a>
                            <p class="mb-0 text-primary">@Model.ListHot[i].Author<span class="text-body"> @Random.Shared.Next(5245,10000)</span></p>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
